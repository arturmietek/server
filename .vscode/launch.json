{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Server",
      "preLaunchTask": "npm: build.dev",
      "timeout": 10000,
      "program": "${workspaceFolder}/dist/modbus2mqtt.js",
      "args": [  "-s", "../ssl", "-y" ,"../yaml-dir"],
      "console": "integratedTerminal",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,  
      "type": "node"
    },
    {
      "address": "localhost",
      "localRoot": "${workspaceFolder}/..",
      "name": "Attach to homeassistant(local)",
      "port": 9229,
      "remoteRoot": "/usr/app/node_modules/@modbus2mqtt",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "server/*/*": "${workspaceFolder}/*",
        "specification.shared/*/*": "${workspaceFolder}../specification.shared/*/*",
        "server.shared/*/*": "${workspaceFolder}../server.shared/*/*",
        "specification/*/*": "${workspaceFolder}../specification/*/*",
      },
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Node",
      "remoteRoot": "/usr/app/node_modules/@modbus2mqtt/server/dist/",
      "localRoot": "${workspaceFolder}/dist",
      "port": 9229,
      "address": "localhost",
    },
    {
      "command": "npm run serverTCP",
      "name": "OUTDATED: Run serverTCP",
      "request": "launch",
      "sourceMaps": true,
      "type": "node-terminal",
      "env": {
        "DEBUG": "express:* modbuscache modbuscache.time",
        "MODBUS2_NOPOLL": "",
      }
    },
    {
      "command": "npm run validate",
      "name": "OUTDATED: Run validate",
      "request": "launch",
      "sourceMaps": true,
      "type": "node-terminal",
      "env": {
        "DEBUG": "m2mgithubvalidate",
        "PR_NUMBER": "62",
      }
    },
    {
      "type": "node",
      "name": "vscode-jest-tests.v2",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "env": {
        "DEBUG": "bus.mutex",
        "NODE_OPTIONS": "--experimental-vm-modules npx jest"
      },
      "args": [
        "--runInBand",
        "--detectOpenHandles",
        "--watchAll=false",
        "--testNamePattern",
        "${jest.testNamePattern}",
        "--runTestsByPath",
        "${jest.testFile}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
    },
    {
      "name": "Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "start",
      "postDebugTask": "stop",
      "port": 9222,
      "sourceMaps": true,
      /*"diagnosticLogging": true,*/
      "webRoot": "${workspaceRoot}/angular",
      "url": "http://localhost:4200/"
    }

  ]
}