{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "name": "Attach to homeassistant(local)",
      "port": 9229,
      "remoteRoot": "/usr/app/node_modules/@modbus2mqtt",
      "sourceMaps": true,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Node",
      "remoteRoot": "/usr/app/node_modules/@modbus2mqtt/server/dist/",
      "localRoot": "${workspaceFolder}/dist",
      "port": 9229,
      "address": "localhost",
    },
    {
      "command": "npm run server",
      "name": "Run run dev server",
      "request": "launch",
      "type": "node-terminal",
      "env": {
        "DEBUG": "m2mgithub",
        "MODBUS2MQTT_NOPOLL": "",
      }
    },
    {
      "command": "npm run modbusanalysis",
      "name": "Run run modbusanalysis",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "npm run server",
      "name": "Run server",
      "request": "launch",
      "type": "node-terminal",
      "env": {
        "DEBUG": "express:* modbuscache modbuscache.time",
        "MODBUS2MQTT_NOPOLL": "",
      }
    },
    {
      "command": "npm run serverTCP",
      "name": "Run serverTCP",
      "request": "launch",
      "sourceMaps": true,
      "type": "node-terminal",
      "env": {
        "DEBUG": "express:* modbuscache modbuscache.time",
        "MODBUS2MQTT_NOPOLL": "",
      }
    },
    {
      "command": "npm run validate",
      "name": "Run validate",
      "request": "launch",
      "sourceMaps": true,
      "type": "node-terminal",
      "env": {
        "DEBUG": "m2mgithubvalidate",
        "PR_NUMBER": "62",
        "GITHUB_TOKEN": "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"
      }
    },
    {
      "command": "npm run  ui",
      "name": "Run ui",
      "request": "launch",
      "type": "node-terminal",
      "env": {
        "DEBUG": "express:* modbuscache modbuscache.time",
        "MODBUS2MQTT_NOPOLL": "",
      },
    },
    {
      "name": "ng serve",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: ng serve",
      "postDebugTask": "npm: stop",
      "url": "http://localhost:4200/"
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html"
    },
    {
      "type": "node",
      "name": "vscode-jest-tests.v2",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "env": {
        "DEBUG": "bus.mutex",
        "NODE_OPTIONS": "--experimental-vm-modules npx jest"
      },
      "args": [
        "--runInBand",
        "--detectOpenHandles",
        "--watchAll=false",
        "--testNamePattern",
        "${jest.testNamePattern}",
        "--runTestsByPath",
        "${jest.testFile}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
    },
    {
      "name": "Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "start",
      "postDebugTask": "stop",
      "port": 9222,
      "sourceMaps": true,
      /*"diagnosticLogging": true,*/
      "webRoot": "${workspaceRoot}/angular",
      "url": "http://localhost:4200/"
    }

  ]
}