  "sshserver": "odroid@homeassistant.fritz.box",
  "description": "server for modbus2mqtt for REST API of configuration and publishing modbus values to mqtt",
  "keywords": [
    "modbus2mqtt",
    "specification",
    "validation"
  ],
  "bugs": "https://github.com/modbus2mqtt/server/issues",
